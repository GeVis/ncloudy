var ZooKeeper = require ("./lib/zookeeper");
var opts = {
    connect: "localhost:2181"
    ,timeout: 1000
    ,debug_level: 0
    ,host_order_deterministic: false
};
var zk = new ZooKeeper();

zk.init(opts).a_get_children("/nodejs",false,function(rc, err, results){
    console.log("It's init connecting,rc=%s",rc)
    zk.connect(opts,function (err,client) {
        client.a_get("/nodejs/_key",false,function(rc, err, stat, data){
            console.log("It's client connecting,rc=%s",rc)
        })
    });
})
